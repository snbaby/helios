<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seadun.helios.mapper.VAlarmMapper">
	<resultMap
		id="BaseResultMap"
		type="com.seadun.helios.entity.VAlarm">
		<result
			column="DETECT_ID"
			jdbcType="VARCHAR"
			property="detectId" />
		<result
			column="DETECT_CODE"
			jdbcType="VARCHAR"
			property="detectCode" />
		<result
			column="DETECT_NAME"
			jdbcType="VARCHAR"
			property="detectName" />
		<result
			column="DETECT_IP"
			jdbcType="VARCHAR"
			property="detectIp" />
		<result
			column="PORT_ID"
			jdbcType="VARCHAR"
			property="portId" />
		<result
			column="PORT_CODE"
			jdbcType="VARCHAR"
			property="portCode" />
		<result
			column="PORT_NAME"
			jdbcType="VARCHAR"
			property="portName" />
		<result
			column="PORT_PORT"
			jdbcType="DECIMAL"
			property="portPort" />
		<result
			column="ASSET_CODE"
			jdbcType="VARCHAR"
			property="assetCode" />
		<result
			column="ASSET_NAME"
			jdbcType="VARCHAR"
			property="assetName" />
		<result
			column="ASSET_DUTY_CODE"
			jdbcType="VARCHAR"
			property="assetDutyCode" />
		<result
			column="ASSET_DUTY_NAME"
			jdbcType="VARCHAR"
			property="assetDutyName" />
		<result
			column="ASSET_TYPE"
			jdbcType="VARCHAR"
			property="assetType" />
		<result
			column="ORG_CODE"
			jdbcType="VARCHAR"
			property="orgCode" />
		<result
			column="ORG_NAME"
			jdbcType="VARCHAR"
			property="orgName" />
		<result
			column="ASSET_STATUS"
			jdbcType="VARCHAR"
			property="assetStatus" />
		<result
			column="ALARM_ID"
			jdbcType="VARCHAR"
			property="alarmId" />
		<result
			column="ALARM_STATUS"
			jdbcType="VARCHAR"
			property="alarmStatus" />
		<result
			column="ALARM_MESSAGE"
			jdbcType="VARCHAR"
			property="alarmMessage" />
		<result
			column="CRT_TIME"
			jdbcType="TIMESTAMP"
			property="crtTime" />
		<result
			column="CRT_USER"
			jdbcType="VARCHAR"
			property="crtUser" />
		<result
			column="UPT_USER"
			jdbcType="VARCHAR"
			property="uptUser" />
		<result
			column="UPT_TIME"
			jdbcType="TIMESTAMP"
			property="uptTime" />
	</resultMap>

	<sql id="Base_Column_List">
		DETECT_ID, DETECT_CODE, DETECT_NAME,
		DETECT_IP, PORT_ID, PORT_CODE,
		PORT_NAME, PORT_PORT, ASSET_CODE,
		ASSET_NAME, ASSET_DUTY_CODE, ASSET_DUTY_NAME,
		ASSET_TYPE, ORG_CODE, ORG_NAME,
		ASSET_STATUS, ALARM_ID, ALARM_STATUS,
		ALARM_MESSAGE, CRT_TIME, CRT_USER,
		UPT_USER, UPT_TIME
	</sql>

	<select
		id="selectPage"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from V_ALARM
		where 1=1
		<if test="assetCode != ''">
			and ASSET_CODE = #{assetCode,jdbcType=VARCHAR}
		</if>
		<if test="detectId != ''">
			and DETECT_ID = #{detectId,jdbcType=VARCHAR}
		</if>
	</select>
</mapper>